<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/item_image_projet"
            android:src="@drawable/item_sbtp6_img"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:shapeAppearanceOverlay="@style/roundImageViewRounded"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/item_detail_projet"
            android:text="Nom du projet"
            android:textColor="@color/bleu"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/item_image_projet"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/item_nom_projet"
            android:text="Encoure"
            android:layout_toEndOf="@id/item_image_projet"
            android:layout_marginStart="210dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/orange"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>